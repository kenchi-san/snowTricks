{% extends 'base.html.twig' %}

{% block title %}réinitialisation du mot de passe{% endblock %}

{% block body %}

<div class="container full-height">
    <div class="row flex center v-center full-height">
        <div class="col-sm-12 offset-lg-1 col-lg-4 col-md-12 ">
            <div class="form-box">
                <h1>Mot de passe oublié</h1>
                {{ form_start(mailForNewForm) }}
                {{ form_row(mailForNewForm.email,{label: 'Votre mail'}) }}
                <input type="submit" value="Envoyer le lien de réinitialisation">

                {{ form_end(mailForNewForm) }}
            </div>
        </div>
    </div>
</div>
    {% endblock %}
