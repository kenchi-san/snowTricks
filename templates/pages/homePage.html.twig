{% extends 'base.html.twig' %}

{% block bottomHeader %}
    <div style="text-align: right">
        <a href="#ancreHeader"> <i class="fas fa-arrow-alt-circle-down fa-4x text-primary"></i></a>
    </div>
{% endblock %}

{% block body %}


    <section class="bg-light"  id="portfolio" >
        <div id="ancreHeader" class="container-fluid">
            <div  class="row">
                <div  class="col-lg-12 text-center">
                    <h2  class="text-uppercase section-heading">Liste des figures</h2>
                </div>
            </div>
            <div class="row">
                {% for figure in figures %}
                    <div class="col-sm-12 col-md-12 col-lg-2 portfolio-item">
                        <a class="portfolio-link" data-toggle="modal"
                           href="{{ path('app_show_figure', {'id': figure.id}) }}">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content"><i class="fa fa-plus fa-3x"></i></div>
                            </div>
                            {% if figure.images.first %}
                                <img class="img-fluid" src="{{ asset('uploads/figures/'~figure.images.first.name) }}"
                                     alt="{{ figure.images.first.name }}">
                            {% endif %}
                        </a>
                        <div class="portfolio-caption">
                            <div class="row">
                                <div class="col-7">
                                    <h5 class="card-title">{{ figure.name }}</h5>
                                </div>
                                <div class="col-5">
                                    {% if app.user %}

                                        <a href="{{ path('app_edit_figure', {'id': figure.id}) }}#edit">
                                            <button type="button" class="fas fa-pencil-alt ">
                                            </button>
                                        </a>

                                        <button type="button" onclick="formPreDelete({{ figure.id }})"
                                                class="fas fa-trash "
                                                data-bs-toggle="modal" data-bs-target="#delete_figure">
                                        </button>
                                    {% endif %}
                                </div>

                            </div>

                            {# <p class="card-text">{{ figure.content|length > 100 ? figure.content|slice(0, 100) ~ '...' : figure.content }} #}
                            {# </p> #}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="row ">
            <div class="   col-6" style="text-align: right">
                <div id="loadMore">
                    <button type="button">Voir plus</button>
                </div>
            </div>
            <div class="  col-6 " style="text-align: right">
                <a href="#ancreHeader"> <i class="fas fa-arrow-alt-circle-up fa-4x text-primary"></i></a>

            </div>

        </div>
    </section>
    {# modale de suppréssion #}
    {% for figure in figures %}

        <div class="modal fade" id="delete_figure" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
             aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Suppréssion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Êtes vous sûre de vouloir supprimer ?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">non</button>
                        <button type="button" class="btn btn-primary"
                                onclick="window.location.href ='{{ path('app_deleted_figure', {'id': figure.id}) }}'; ">
                            oui
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}


    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4"><span class="copyright">Copyright&nbsp;© Brand 2021</span></div>
                <div class="col-md-4">
                    <ul class="list-inline social-buttons">
                        <li class="list-inline-item"><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fa fa-linkedin"></i></a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <ul class="list-inline quicklinks">
                        <li class="list-inline-item"><a href="#">Privacy Policy</a></li>
                        <li class="list-inline-item"><a href="#">Terms of Use</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

{% endblock body %}