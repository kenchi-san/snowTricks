{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}


    <div class="container h-100">
        <div class="col align-self-center">
            <h1>On s'enregistre ?</h1>
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.userName, {label: 'Nom d\'utilisateur'}) }}
            {{ form_row(registrationForm.email, {label: 'Mail'}) }}
            {{ form_row(registrationForm.plainPassword.first) }}
            {{ form_row(registrationForm.plainPassword.second) }}

            <button  type="submit" class="btn btn-outline-primary">Envoyer</button>
            {{ form_row(registrationForm.agreeTerms, {label: 'valider les termes '}) }}


            <a href="{{ path('app_login') }}">
                <button type="button" class="btn btn-secondary btn-sm underlineHover">déjà un compte ?</button>
            </a>
            {{ form_end(registrationForm) }}

        </div>
    </div>
{% endblock body %}
